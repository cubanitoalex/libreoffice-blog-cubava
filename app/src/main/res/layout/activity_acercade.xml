<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context=".Acercade">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/uic_hlg" />


            <TextView

                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="5dp"
                android:text="Version 1.1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:autoLink="phone|email"
                android:text="@string/Alexis"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">


                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:background="#FAFAFA"
                    android:clickable="true"
                    android:onClick="facebookalex"
                    android:scaleType="matrix"
                    app:srcCompat="@drawable/facebook_96px"
                    tools:ignore="OnClick" />

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">


                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:background="#FAFAFA"
                    android:clickable="true"
                    android:onClick="twitteralex"
                    android:scaleType="matrix"
                    app:srcCompat="@drawable/twitter_96px"
                    tools:ignore="OnClick" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">


                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:background="#FAFAFA"
                    android:clickable="true"
                    android:onClick="whatsappalex"
                    android:scaleType="matrix"
                    app:srcCompat="@drawable/whatsapp_96px"
                    tools:ignore="OnClick" />

            </RelativeLayout>




        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>